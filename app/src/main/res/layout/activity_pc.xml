<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.infan.wtb.PC">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary"
        android:id="@+id/toolbar"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_wtb_2"
            android:padding="10dp"/>

        <ImageView
            android:id="@+id/btnProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arts"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:tint="#fff"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/pc_wallpaper"
            android:background="#000"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#514e4e">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_margin="12dp"
                android:weightSum="2"
                android:background="#fff"
                android:padding="20dp">
                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:text="Motherboard"
                    android:drawableTop="@drawable/motherboard"
                    android:id="@+id/btnMobo"
                    style="?android:attr/borderlessButtonStyle" />
                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/cpu"
                    android:text="CPU"
                    android:id="@+id/btnCPU"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="12dp"
                android:background="#fff"
                android:padding="20dp">
                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ram_memory"
                    android:text="ram"
                    android:id="@+id/btnRam"
                    style="?android:attr/borderlessButtonStyle"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/hdd"
                    android:text="storage"
                    android:id="@+id/btnStorage"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="12dp"
                android:background="#fff"
                android:padding="20dp">
                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/computer"
                    android:text="Case"
                    android:id="@+id/btnCase"
                    style="?android:attr/borderlessButtonStyle"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/video_card"
                    android:text="gpu/vga"
                    android:id="@+id/btnGpu"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_margin="12dp"
                android:background="#fff"
                android:padding="20dp">
                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/power"
                    android:text="PSU"
                    android:id="@+id/btnPsu"
                    style="?android:attr/borderlessButtonStyle"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/monitor"
                    android:text="Monitor"
                    android:id="@+id/btnMonitor"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>